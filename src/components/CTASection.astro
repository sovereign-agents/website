<style>
  /* Network Visualization */
  .network-visualization {
    @apply relative;
  }
  
  .network-container {
    @apply relative flex items-center justify-center;
  }
  
  .network-hub {
    @apply absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2;
  }
  
  .hub-core {
    @apply w-12 h-12 sm:w-16 sm:h-16 md:w-20 md:h-20 bg-gradient-to-br from-cyber-green to-electric-blue rounded-full;
    box-shadow: 0 0 40px rgba(0, 255, 65, 0.6);
    animation: hub-pulse 4s ease-in-out infinite;
  }
  
  .hub-ring {
    @apply absolute inset-0 w-12 h-12 sm:w-16 sm:h-16 md:w-20 md:h-20 border-2 md:border-4 border-white/30 rounded-full;
    animation: hub-rotate 20s linear infinite;
  }
  
  .hub-label {
    @apply absolute top-full left-1/2 transform -translate-x-1/2 mt-3
           text-white font-bold text-sm;
  }
  
  .user-nodes {
    @apply absolute inset-0;
  }
  
  .user-node {
    @apply absolute flex flex-col items-center;
  }
  
  .node-avatar {
    @apply w-8 h-8 sm:w-10 sm:h-10 bg-dark-surface border border-gray-600 rounded-full
           flex items-center justify-center text-sm sm:text-lg;
    animation: node-breathe 3s ease-in-out infinite;
  }
  
  .node-agent {
    @apply w-3 h-3 bg-cyber-green rounded-full mt-1;
    animation: agent-activity 2s ease-in-out infinite;
  }
  
  .connection-line {
    @apply absolute w-1 bg-gradient-to-t from-transparent via-white to-transparent;
    animation: data-pulse 3s ease-in-out infinite;
  }
  
  /* User node positions */
  .un-1 { 
    top: 10%; 
    left: 20%; 
    animation-delay: 0s; 
  }
  .un-1 .connection-line { 
    height: 120px; 
    top: 50px; 
    left: 50%; 
    transform: rotate(30deg) translateX(-50%); 
  }
  
  .un-2 { 
    top: 20%; 
    right: 15%; 
    animation-delay: 0.5s; 
  }
  .un-2 .connection-line { 
    height: 100px; 
    top: 50px; 
    left: 50%; 
    transform: rotate(-30deg) translateX(-50%); 
  }
  
  .un-3 { 
    bottom: 20%; 
    right: 20%; 
    animation-delay: 1s; 
  }
  .un-3 .connection-line { 
    height: 110px; 
    bottom: 50px; 
    left: 50%; 
    transform: rotate(30deg) translateX(-50%); 
  }
  
  .un-4 { 
    bottom: 10%; 
    left: 25%; 
    animation-delay: 1.5s; 
  }
  .un-4 .connection-line { 
    height: 130px; 
    bottom: 50px; 
    left: 50%; 
    transform: rotate(-30deg) translateX(-50%); 
  }
  
  .un-5 { 
    top: 50%; 
    left: 5%; 
    animation-delay: 2s; 
  }
  .un-5 .connection-line { 
    height: 140px; 
    top: 50px; 
    left: 50%; 
    transform: rotate(0deg) translateX(-50%); 
  }
  
  .un-6 { 
    top: 45%; 
    right: 5%; 
    animation-delay: 2.5s; 
  }
  .un-6 .connection-line { 
    height: 150px; 
    top: 50px; 
    left: 50%; 
    transform: rotate(0deg) translateX(-50%); 
  }
  
  /* Data flow particles */
  .data-flows {
    @apply absolute inset-0 pointer-events-none;
  }
  
  .flow-particle {
    @apply absolute w-2 h-2 bg-cyber-green rounded-full;
    box-shadow: 0 0 8px currentColor;
  }
  
  .fp-1 { 
    animation: flow-1 4s ease-in-out infinite; 
  }
  .fp-2 { 
    animation: flow-2 4s ease-in-out infinite 0.5s; 
  }
  .fp-3 { 
    animation: flow-3 4s ease-in-out infinite 1s; 
  }
  .fp-4 { 
    animation: flow-4 4s ease-in-out infinite 1.5s; 
  }
  .fp-5 { 
    animation: flow-5 4s ease-in-out infinite 2s; 
  }
  .fp-6 { 
    animation: flow-6 4s ease-in-out infinite 2.5s; 
  }
  
  /* Network stats */
  .network-stats {
    @apply absolute bottom-0 left-0 right-0 flex justify-center space-x-8;
  }
  
  .stat-item {
    @apply text-center;
  }
  
  .stat-number {
    @apply text-2xl font-bold text-cyber-green mb-1;
  }
  
  .stat-label {
    @apply text-sm text-gray-400;
  }
  
  /* CTA Buttons */
  .cta-primary {
    @apply px-10 py-4 bg-dark-surface border-2 border-cyber-green text-cyber-green
           rounded-lg font-bold text-lg transition-all duration-300
           hover:shadow-lg inline-block;
  }
  
  .cta-primary:hover {
    box-shadow: 0 0 30px rgba(0, 255, 65, 0.4);
  }
  
  /* Highlight cards */
  .highlight-card {
    @apply p-6 bg-dark-surface/30 border border-dark-border rounded-xl text-center
           backdrop-blur-sm transition-all duration-300 hover:border-cyber-green/30;
  }
  
  .highlight-icon {
    @apply text-3xl mb-3;
  }
  
  .highlight-title {
    @apply text-white font-bold mb-2;
  }
  
  .highlight-desc {
    @apply text-gray-400 text-sm;
  }
  
  
  /* Animations */
  @keyframes hub-pulse {
    0%, 100% { 
      transform: scale(1);
      box-shadow: 0 0 40px rgba(0, 255, 65, 0.6);
    }
    50% { 
      transform: scale(1.05);
      box-shadow: 0 0 60px rgba(0, 255, 65, 0.9);
    }
  }
  
  @keyframes hub-rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  @keyframes node-breathe {
    0%, 100% { 
      transform: scale(1);
    }
    50% { 
      transform: scale(1.1);
    }
  }
  
  @keyframes agent-activity {
    0%, 100% { 
      opacity: 0.6;
    }
    50% { 
      opacity: 1;
    }
  }
  
  @keyframes data-pulse {
    0%, 100% { 
      opacity: 0.3;
    }
    50% { 
      opacity: 1;
    }
  }
  
  /* Flow particle animations */
  @keyframes flow-1 {
    0%, 100% { top: 15%; left: 25%; opacity: 0; }
    25% { top: 35%; left: 35%; opacity: 1; }
    50% { top: 50%; left: 50%; opacity: 1; }
    75% { opacity: 0; }
  }
  
  @keyframes flow-2 {
    0%, 100% { top: 25%; right: 20%; opacity: 0; }
    25% { top: 35%; right: 35%; opacity: 1; }
    50% { top: 50%; right: 50%; opacity: 1; }
    75% { opacity: 0; }
  }
  
  @keyframes flow-3 {
    0%, 100% { bottom: 25%; right: 25%; opacity: 0; }
    25% { bottom: 35%; right: 35%; opacity: 1; }
    50% { bottom: 50%; right: 50%; opacity: 1; }
    75% { opacity: 0; }
  }
  
  @keyframes flow-4 {
    0%, 100% { bottom: 15%; left: 30%; opacity: 0; }
    25% { bottom: 35%; left: 40%; opacity: 1; }
    50% { bottom: 50%; left: 50%; opacity: 1; }
    75% { opacity: 0; }
  }
  
  @keyframes flow-5 {
    0%, 100% { top: 55%; left: 10%; opacity: 0; }
    25% { top: 52%; left: 30%; opacity: 1; }
    50% { top: 50%; left: 50%; opacity: 1; }
    75% { opacity: 0; }
  }
  
  @keyframes flow-6 {
    0%, 100% { top: 50%; right: 10%; opacity: 0; }
    25% { top: 52%; right: 30%; opacity: 1; }
    50% { top: 50%; right: 50%; opacity: 1; }
    75% { opacity: 0; }
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .network-stats {
      @apply space-x-4;
    }
    
    .stat-number {
      @apply text-lg;
    }
    
    .stat-label {
      @apply text-xs;
    }
  }
</style>