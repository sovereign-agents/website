<style>
  .feature-row {
    @apply relative;
  }
  
  .feature-content {
    @apply space-y-6;
  }
  
  .feature-badge {
    @apply inline-flex items-center justify-center w-16 h-16 rounded-full 
           bg-dark-surface border-2 border-current text-2xl font-bold;
  }
  
  .feature-highlights {
    @apply space-y-3;
  }
  
  .highlight-item {
    @apply flex items-center space-x-3;
  }
  
  .highlight-dot {
    @apply w-2 h-2 rounded-full flex-shrink-0;
  }
  
  .feature-visual {
    @apply flex items-center justify-center h-80;
  }
  
  /* Orchestration Hub Styles */
  .orchestration-hub {
    @apply relative w-full h-full;
  }
  
  .central-orchestrator {
    @apply absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2;
  }
  
  .orchestrator-core {
    @apply w-16 h-16 bg-cyber-green rounded-full;
    box-shadow: 0 0 30px #00ff41;
    animation: orchestrator-pulse 3s ease-in-out infinite;
  }
  
  .orchestrator-ring {
    @apply absolute inset-0 w-16 h-16 border-2 border-cyber-green rounded-full;
    animation: ring-rotate 8s linear infinite;
  }
  
  .orchestrator-label {
    @apply absolute top-full left-1/2 transform -translate-x-1/2 mt-2
           text-cyber-green font-bold;
  }
  
  .connected-system {
    @apply absolute;
  }
  
  .system-node {
    @apply w-8 h-8 bg-gray-600 rounded-full;
    animation: system-pulse 2s ease-in-out infinite;
  }
  
  .system-label {
    @apply absolute top-full left-1/2 transform -translate-x-1/2 mt-1
           text-gray-400 text-xs font-medium;
  }
  
  .sys-1 { top: 10%; left: 20%; animation-delay: 0s; }
  .sys-2 { top: 10%; right: 20%; animation-delay: 0.5s; }
  .sys-3 { bottom: 10%; left: 20%; animation-delay: 1s; }
  .sys-4 { bottom: 10%; right: 20%; animation-delay: 1.5s; }
  
  .activity-pulse {
    @apply absolute w-4 h-4 bg-cyber-green rounded-full;
    animation: activity-move 4s ease-in-out infinite;
  }
  
  .pulse-1 {
    top: 20%;
    left: 35%;
    animation-delay: 0s;
  }
  
  .pulse-2 {
    top: 60%;
    right: 35%;
    animation-delay: 1.3s;
  }
  
  .pulse-3 {
    bottom: 30%;
    left: 40%;
    animation-delay: 2.6s;
  }
  
  /* Knowledge Vault Styles */
  .knowledge-vault {
    @apply relative w-full h-full flex items-center justify-center;
  }
  
  .vault-structure {
    @apply relative;
  }
  
  .knowledge-block {
    @apply absolute w-16 h-16 bg-dark-surface border-2 border-electric-blue rounded-lg
           flex items-center justify-center;
    animation: knowledge-float 4s ease-in-out infinite;
  }
  
  .kb-1 { 
    top: -30px; 
    left: -40px; 
    animation-delay: 0s;
  }
  
  .kb-2 { 
    top: -30px; 
    right: -40px; 
    animation-delay: 1s;
  }
  
  .kb-3 { 
    bottom: -30px; 
    left: -10px; 
    animation-delay: 2s;
  }
  
  .block-content {
    @apply text-center;
  }
  
  .block-icon {
    @apply text-2xl mb-1;
  }
  
  .block-label {
    @apply text-xs text-electric-blue font-medium;
  }
  
  .privacy-shield {
    @apply relative w-20 h-20 bg-dark-bg border-4 border-cyber-green rounded-full
           flex items-center justify-center;
  }
  
  .shield-icon {
    @apply text-3xl relative z-10;
  }
  
  .shield-glow {
    @apply absolute inset-0 bg-cyber-green rounded-full opacity-20;
    animation: shield-pulse 3s ease-in-out infinite;
  }
  
  /* Tool Marketplace Styles */
  .tool-marketplace {
    @apply relative w-full h-full;
  }
  
  .marketplace-center {
    @apply absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2;
  }
  
  .center-node {
    @apply w-12 h-12 bg-neon-purple rounded-full;
    box-shadow: 0 0 25px #9945ff;
  }
  
  .center-label {
    @apply absolute top-full left-1/2 transform -translate-x-1/2 mt-2
           text-neon-purple font-bold text-sm;
  }
  
  .tool-node {
    @apply absolute w-10 h-10 bg-dark-surface border border-neon-purple rounded-lg
           flex flex-col items-center justify-center;
    animation: tool-hover 3s ease-in-out infinite;
  }
  
  .tool-icon {
    @apply text-lg;
  }
  
  .tool-name {
    @apply text-xs text-neon-purple font-medium mt-1 absolute top-full whitespace-nowrap;
  }
  
  .tool-1 { top: 0; left: 30%; animation-delay: 0s; }
  .tool-2 { top: 20%; right: 10%; animation-delay: 0.3s; }
  .tool-3 { bottom: 20%; right: 10%; animation-delay: 0.6s; }
  .tool-4 { bottom: 0; left: 30%; animation-delay: 0.9s; }
  .tool-5 { bottom: 20%; left: 10%; animation-delay: 1.2s; }
  .tool-6 { top: 20%; left: 10%; animation-delay: 1.5s; }
  
  /* Scalability Demo Styles */
  .scalability-demo {
    @apply relative w-full h-full flex flex-col justify-center space-y-6;
  }
  
  .compute-layers {
    @apply space-y-4;
  }
  
  .layer {
    @apply flex items-center space-x-4;
  }
  
  .layer-label {
    @apply w-16 text-sm text-gray-400 font-medium;
  }
  
  .layer-nodes {
    @apply flex space-x-2;
  }
  
  .compute-node {
    @apply w-6 h-6 bg-yellow-400 rounded;
    animation: compute-activity 2s ease-in-out infinite;
  }
  
  .layer-1 .compute-node { animation-delay: 0s; }
  .layer-2 .compute-node:nth-child(1) { animation-delay: 0.2s; }
  .layer-2 .compute-node:nth-child(2) { animation-delay: 0.4s; }
  .layer-2 .compute-node:nth-child(3) { animation-delay: 0.6s; }
  .layer-3 .compute-node:nth-child(1) { animation-delay: 0.8s; }
  .layer-3 .compute-node:nth-child(2) { animation-delay: 1s; }
  .layer-3 .compute-node:nth-child(3) { animation-delay: 1.2s; }
  .layer-3 .compute-node:nth-child(4) { animation-delay: 1.4s; }
  .layer-3 .compute-node:nth-child(5) { animation-delay: 1.6s; }
  
  .encryption-overlay {
    @apply absolute top-4 right-4 flex items-center space-x-2
           bg-dark-surface/80 px-3 py-2 rounded-lg border border-cyber-green;
  }
  
  .encryption-icon {
    @apply text-lg text-cyber-green;
  }
  
  .encryption-label {
    @apply text-xs text-cyber-green font-medium;
  }
  
  /* Animations */
  @keyframes orchestrator-pulse {
    0%, 100% { 
      transform: scale(1);
      box-shadow: 0 0 30px rgba(0, 255, 65, 0.6);
    }
    50% { 
      transform: scale(1.1);
      box-shadow: 0 0 40px rgba(0, 255, 65, 1);
    }
  }
  
  @keyframes ring-rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  @keyframes system-pulse {
    0%, 100% { 
      transform: scale(1);
      opacity: 0.7;
    }
    50% { 
      transform: scale(1.2);
      opacity: 1;
    }
  }
  
  @keyframes activity-move {
    0%, 100% { 
      transform: scale(0);
      opacity: 0;
    }
    10% {
      transform: scale(1);
      opacity: 1;
    }
    90% {
      transform: scale(1);
      opacity: 1;
    }
  }
  
  @keyframes knowledge-float {
    0%, 100% { 
      transform: translateY(0px);
    }
    50% { 
      transform: translateY(-10px);
    }
  }
  
  @keyframes shield-pulse {
    0%, 100% { 
      opacity: 0.2;
      transform: scale(1);
    }
    50% { 
      opacity: 0.4;
      transform: scale(1.05);
    }
  }
  
  @keyframes tool-hover {
    0%, 100% { 
      transform: translateY(0px);
    }
    50% { 
      transform: translateY(-3px);
    }
  }
  
  @keyframes compute-activity {
    0%, 100% { 
      opacity: 0.4;
    }
    50% { 
      opacity: 1;
    }
  }
</style>