<style>
  .arch-component {
    @apply flex items-start space-x-6 p-6 bg-dark-surface/30 rounded-xl
           border border-dark-border hover:border-cyber-green/30 
           transition-all duration-300 backdrop-blur-sm;
  }
  
  .arch-icon {
    @apply flex-shrink-0 w-16 h-16 bg-dark-bg rounded-lg flex items-center justify-center;
  }
  
  .arch-content {
    @apply flex-1;
  }
  
  .architecture-diagram {
    @apply flex items-center justify-center;
  }
  
  .diagram-container {
    @apply relative w-full max-w-md space-y-6;
  }
  
  .arch-layer {
    @apply relative p-4 bg-dark-surface/50 rounded-xl border border-dark-border
           backdrop-blur-sm;
  }
  
  .layer-content {
    @apply text-center;
  }
  
  .layer-title {
    @apply text-lg font-bold text-white mb-1;
  }
  
  .layer-description {
    @apply text-sm text-gray-400 mb-4;
  }
  
  /* Nostr Protocol Layer */
  .layer-nostr {
    @apply border-cyber-green/50;
  }
  
  .layer-nostr .layer-title {
    @apply text-cyber-green;
  }
  
  .layer-nodes {
    @apply flex justify-center space-x-2;
  }
  
  .protocol-node {
    @apply w-3 h-3 bg-cyber-green rounded-full;
    animation: protocol-pulse 2s ease-in-out infinite;
  }
  
  .node-1 { animation-delay: 0s; }
  .node-2 { animation-delay: 0.2s; }
  .node-3 { animation-delay: 0.4s; }
  .node-4 { animation-delay: 0.6s; }
  .node-5 { animation-delay: 0.8s; }
  
  /* Confidential Computing Layer */
  .layer-compute {
    @apply border-electric-blue/50;
  }
  
  .layer-compute .layer-title {
    @apply text-electric-blue;
  }
  
  .compute-enclaves {
    @apply flex justify-center space-x-4;
  }
  
  .enclave {
    @apply relative;
  }
  
  .enclave-core {
    @apply w-6 h-6 bg-electric-blue rounded;
    animation: enclave-process 3s ease-in-out infinite;
  }
  
  .enclave-shield {
    @apply absolute inset-0 border-2 border-electric-blue rounded;
    animation: shield-rotate 4s linear infinite;
  }
  
  .enclave-1 { animation-delay: 0s; }
  .enclave-2 { animation-delay: 1s; }
  .enclave-3 { animation-delay: 2s; }
  
  /* Modular Components Layer */
  .layer-modules {
    @apply border-neon-purple/50;
  }
  
  .layer-modules .layer-title {
    @apply text-neon-purple;
  }
  
  .module-grid {
    @apply grid grid-cols-2 gap-2;
  }
  
  .module-block {
    @apply px-3 py-2 bg-neon-purple/20 text-neon-purple text-xs font-medium
           rounded border border-neon-purple/30;
    animation: module-glow 4s ease-in-out infinite;
  }
  
  .mb-1 { animation-delay: 0s; }
  .mb-2 { animation-delay: 1s; }
  .mb-3 { animation-delay: 2s; }
  .mb-4 { animation-delay: 3s; }
  
  /* Market Integration Layer */
  .layer-market {
    @apply border-yellow-400/50;
  }
  
  .layer-market .layer-title {
    @apply text-yellow-400;
  }
  
  .market-services {
    @apply flex justify-center space-x-3;
  }
  
  .service-icon {
    @apply text-lg;
    animation: service-float 3s ease-in-out infinite;
  }
  
  .service-icon:nth-child(1) { animation-delay: 0s; }
  .service-icon:nth-child(2) { animation-delay: 0.5s; }
  .service-icon:nth-child(3) { animation-delay: 1s; }
  .service-icon:nth-child(4) { animation-delay: 1.5s; }
  
  /* Layer Connections */
  .layer-connections {
    @apply absolute inset-0 pointer-events-none;
  }
  
  .connection {
    @apply absolute left-1/2 w-0.5 bg-gradient-to-b from-transparent via-white to-transparent;
    height: 20px;
    animation: connection-flow 3s ease-in-out infinite;
  }
  
  .conn-1 { 
    top: 25%; 
    animation-delay: 0s;
  }
  
  .conn-2 { 
    top: 50%; 
    animation-delay: 1s;
  }
  
  .conn-3 { 
    top: 75%; 
    animation-delay: 2s;
  }
  
  /* Technical Specifications */
  .tech-specs {
    @apply mt-20;
  }
  
  .spec-card {
    @apply p-6 bg-dark-surface/30 border border-dark-border rounded-xl
           hover:border-cyber-green/30 transition-all duration-300 backdrop-blur-sm;
  }
  
  .spec-header {
    @apply flex items-center space-x-3 mb-4;
  }
  
  .spec-icon {
    @apply text-2xl;
  }
  
  .spec-title {
    @apply text-lg font-bold text-white;
  }
  
  .spec-content {
    @apply space-y-3;
  }
  
  .spec-item {
    @apply flex justify-between items-center;
  }
  
  .spec-label {
    @apply text-gray-400 text-sm;
  }
  
  .spec-value {
    @apply text-white text-sm font-semibold;
  }
  
  /* Animations */
  @keyframes protocol-pulse {
    0%, 100% { 
      opacity: 0.5;
      transform: scale(1);
    }
    50% { 
      opacity: 1;
      transform: scale(1.2);
    }
  }
  
  @keyframes enclave-process {
    0%, 100% { 
      opacity: 0.7;
    }
    50% { 
      opacity: 1;
    }
  }
  
  @keyframes shield-rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  @keyframes module-glow {
    0%, 100% { 
      box-shadow: 0 0 5px rgba(153, 69, 255, 0.3);
    }
    50% { 
      box-shadow: 0 0 15px rgba(153, 69, 255, 0.6);
    }
  }
  
  @keyframes service-float {
    0%, 100% { 
      transform: translateY(0px);
    }
    50% { 
      transform: translateY(-5px);
    }
  }
  
  @keyframes connection-flow {
    0% { 
      opacity: 0;
      height: 0px;
    }
    50% { 
      opacity: 1;
      height: 20px;
    }
    100% { 
      opacity: 0;
      height: 0px;
    }
  }
</style>