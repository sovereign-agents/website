<section class="solution-section py-20 bg-dark-surface">
  <div class="container mx-auto px-6">
    <div class="max-w-6xl mx-auto">
      <!-- Section header -->
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-6xl font-bold mb-6">
          <span class="text-white">A</span> 
          <span class="text-cyber-green text-glow">Different Path</span> 
          <span class="text-white">Forward</span>
        </h2>
        <p class="text-xl text-gray-300 max-w-4xl mx-auto">
          Sovereign Agents extend your capabilities without compromising your values.
        </p>
      </div>
      
      <!-- Main content -->
      <div class="grid md:grid-cols-2 gap-16 items-center mb-20">
        <!-- Left side - Description -->
        <div class="space-y-6">
          <div class="solution-highlight">
            <p class="text-lg text-gray-300 leading-relaxed">
              Unlike traditional AI assistants, Sovereign Agents operate as 
              <span class="text-electric-blue font-semibold">distributed systems</span> 
              that work for you, not against you.
            </p>
          </div>
          
          <div class="solution-highlight">
            <p class="text-lg text-gray-300 leading-relaxed">
              They leverage <span class="text-neon-purple font-semibold">confidential computing</span> 
              and <span class="text-cyber-green font-semibold">decentralized networks</span> 
              to deliver enterprise-grade capabilities while keeping your data under your control.
            </p>
          </div>
          
          <!-- Key differentiators -->
          <div class="mt-12 space-y-4">
            <div class="flex items-center space-x-3">
              <div class="w-2 h-2 bg-cyber-green rounded-full"></div>
              <span class="text-gray-300">Proactive, not reactive</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-2 h-2 bg-electric-blue rounded-full"></div>
              <span class="text-gray-300">Distributed, not centralized</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-2 h-2 bg-neon-purple rounded-full"></div>
              <span class="text-gray-300">Privacy-first, not surveillance</span>
            </div>
          </div>
        </div>
        
        <!-- Right side - Distributed network visualization -->
        <div class="relative h-96">
          <!-- Decentralized network -->
          <div class="distributed-network">
            <!-- Central user node -->
            <div class="user-node">
              <div class="node-ring"></div>
              <div class="node-core"></div>
              <div class="node-label">You</div>
            </div>
            
            <!-- Sovereign agent nodes -->
            <div class="agent-node node-1">
              <div class="agent-core"></div>
              <div class="agent-label">Agent 1</div>
            </div>
            <div class="agent-node node-2">
              <div class="agent-core"></div>
              <div class="agent-label">Agent 2</div>
            </div>
            <div class="agent-node node-3">
              <div class="agent-core"></div>
              <div class="agent-label">Agent 3</div>
            </div>
            <div class="agent-node node-4">
              <div class="agent-core"></div>
              <div class="agent-label">Agent 4</div>
            </div>
            
            <!-- Connection lines -->
            <svg class="absolute inset-0 w-full h-full" viewBox="0 0 400 400">
              <defs>
                <marker id="greenArrow" markerWidth="8" markerHeight="6" 
                        refX="7" refY="3" orient="auto">
                  <polygon points="0 0, 8 3, 0 6" fill="#00ff41" />
                </marker>
              </defs>
              
              <!-- Bidirectional connections -->
              <line x1="200" y1="200" x2="120" y2="120" 
                    stroke="#00ff41" stroke-width="2" 
                    class="connection-line conn-1" 
                    marker-end="url(#greenArrow)" />
              <line x1="200" y1="200" x2="280" y2="120" 
                    stroke="#00ff41" stroke-width="2" 
                    class="connection-line conn-2" 
                    marker-end="url(#greenArrow)" />
              <line x1="200" y1="200" x2="120" y2="280" 
                    stroke="#00ff41" stroke-width="2" 
                    class="connection-line conn-3" 
                    marker-end="url(#greenArrow)" />
              <line x1="200" y1="200" x2="280" y2="280" 
                    stroke="#00ff41" stroke-width="2" 
                    class="connection-line conn-4" 
                    marker-end="url(#greenArrow)" />
                    
              <!-- Agent-to-agent connections -->
              <line x1="120" y1="120" x2="280" y2="120" 
                    stroke="#0099ff" stroke-width="1" 
                    stroke-dasharray="5,5"
                    class="agent-connection ac-1" />
              <line x1="120" y1="280" x2="280" y2="280" 
                    stroke="#0099ff" stroke-width="1" 
                    stroke-dasharray="5,5"
                    class="agent-connection ac-2" />
            </svg>
            
            <!-- Data flow particles -->
            <div class="data-particle p1"></div>
            <div class="data-particle p2"></div>
            <div class="data-particle p3"></div>
            <div class="data-particle p4"></div>
          </div>
        </div>
      </div>
      
      <!-- Core Principles Grid -->
      <div class="text-center mb-12">
        <h3 class="text-3xl font-bold text-white mb-12">Core Principles</h3>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Privacy First -->
        <div class="principle-card">
          <div class="principle-icon">
            <span class="text-3xl">üõ°Ô∏è</span>
          </div>
          <h4 class="principle-title text-cyber-green">Privacy First</h4>
          <p class="principle-description">Your data stays yours</p>
        </div>
        
        <!-- Individual Sovereignty -->
        <div class="principle-card">
          <div class="principle-icon">
            <span class="text-3xl">üëë</span>
          </div>
          <h4 class="principle-title text-electric-blue">Individual Sovereignty</h4>
          <p class="principle-description">You set the rules</p>
        </div>
        
        <!-- Proactive Intelligence -->
        <div class="principle-card">
          <div class="principle-icon">
            <span class="text-3xl">üß†</span>
          </div>
          <h4 class="principle-title text-neon-purple">Proactive Intelligence</h4>
          <p class="principle-description">Anticipates needs, doesn't just respond</p>
        </div>
        
        <!-- Distributed Power -->
        <div class="principle-card">
          <div class="principle-icon">
            <span class="text-3xl">üåê</span>
          </div>
          <h4 class="principle-title text-yellow-400">Distributed Power</h4>
          <p class="principle-description">No single point of control or failure</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .solution-highlight {
    @apply p-6 bg-dark-bg/50 border-l-4 border-cyber-green rounded-r-lg;
  }
  
  .distributed-network {
    @apply relative w-full h-full;
  }
  
  .user-node {
    @apply absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2;
  }
  
  .node-ring {
    @apply w-16 h-16 border-4 border-cyber-green rounded-full;
    animation: node-pulse 3s ease-in-out infinite;
  }
  
  .node-core {
    @apply absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2
           w-8 h-8 bg-cyber-green rounded-full;
    box-shadow: 0 0 20px #00ff41;
  }
  
  .node-label {
    @apply absolute top-full left-1/2 transform -translate-x-1/2 mt-2
           text-cyber-green font-semibold text-sm;
  }
  
  .agent-node {
    @apply absolute;
  }
  
  .agent-core {
    @apply w-10 h-10 bg-electric-blue rounded-full;
    box-shadow: 0 0 15px #0099ff;
    animation: agent-pulse 2s ease-in-out infinite;
  }
  
  .agent-label {
    @apply absolute top-full left-1/2 transform -translate-x-1/2 mt-2
           text-electric-blue font-medium text-xs;
  }
  
  .node-1 { top: 10%; left: 15%; animation-delay: 0s; }
  .node-2 { top: 10%; right: 15%; animation-delay: 0.5s; }
  .node-3 { bottom: 10%; left: 15%; animation-delay: 1s; }
  .node-4 { bottom: 10%; right: 15%; animation-delay: 1.5s; }
  
  .connection-line {
    stroke-dasharray: 20 10;
    animation: data-flow 2s linear infinite;
  }
  
  .conn-1 { animation-delay: 0s; }
  .conn-2 { animation-delay: 0.3s; }
  .conn-3 { animation-delay: 0.6s; }
  .conn-4 { animation-delay: 0.9s; }
  
  .agent-connection {
    animation: agent-sync 4s ease-in-out infinite;
  }
  
  .ac-1 { animation-delay: 0s; }
  .ac-2 { animation-delay: 2s; }
  
  .data-particle {
    @apply absolute w-2 h-2 bg-white rounded-full;
    box-shadow: 0 0 10px currentColor;
  }
  
  .p1 {
    top: 45%;
    left: 30%;
    animation: particle-flow-1 3s linear infinite;
  }
  
  .p2 {
    top: 45%;
    right: 30%;
    animation: particle-flow-2 3s linear infinite 0.5s;
  }
  
  .p3 {
    bottom: 45%;
    left: 30%;
    animation: particle-flow-3 3s linear infinite 1s;
  }
  
  .p4 {
    bottom: 45%;
    right: 30%;
    animation: particle-flow-4 3s linear infinite 1.5s;
  }
  
  .principle-card {
    @apply p-6 bg-dark-bg border border-dark-border rounded-xl text-center
           transition-all duration-300 hover:border-cyber-green/50 
           hover:shadow-lg backdrop-blur-sm;
  }
  
  .principle-card:hover {
    box-shadow: 0 10px 30px rgba(0, 255, 65, 0.1);
  }
  
  .principle-icon {
    @apply mb-4;
  }
  
  .principle-title {
    @apply text-lg font-bold mb-2;
  }
  
  .principle-description {
    @apply text-gray-400 text-sm;
  }
  
  @keyframes node-pulse {
    0%, 100% { 
      transform: scale(1);
      box-shadow: 0 0 20px rgba(0, 255, 65, 0.5);
    }
    50% { 
      transform: scale(1.1);
      box-shadow: 0 0 30px rgba(0, 255, 65, 0.8);
    }
  }
  
  @keyframes agent-pulse {
    0%, 100% { 
      transform: scale(1);
      opacity: 0.8;
    }
    50% { 
      transform: scale(1.2);
      opacity: 1;
    }
  }
  
  @keyframes data-flow {
    0% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: -30; }
  }
  
  @keyframes agent-sync {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 1; }
  }
  
  @keyframes particle-flow-1 {
    0% { transform: translate(0, 0); opacity: 0; }
    10% { opacity: 1; }
    50% { transform: translate(50px, -50px); opacity: 1; }
    90% { opacity: 1; }
    100% { transform: translate(100px, -100px); opacity: 0; }
  }
  
  @keyframes particle-flow-2 {
    0% { transform: translate(0, 0); opacity: 0; }
    10% { opacity: 1; }
    50% { transform: translate(-50px, -50px); opacity: 1; }
    90% { opacity: 1; }
    100% { transform: translate(-100px, -100px); opacity: 0; }
  }
  
  @keyframes particle-flow-3 {
    0% { transform: translate(0, 0); opacity: 0; }
    10% { opacity: 1; }
    50% { transform: translate(50px, 50px); opacity: 1; }
    90% { opacity: 1; }
    100% { transform: translate(100px, 100px); opacity: 0; }
  }
  
  @keyframes particle-flow-4 {
    0% { transform: translate(0, 0); opacity: 0; }
    10% { opacity: 1; }
    50% { transform: translate(-50px, 50px); opacity: 1; }
    90% { opacity: 1; }
    100% { transform: translate(-100px, 100px); opacity: 0; }
  }
</style>