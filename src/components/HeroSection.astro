<section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Animated network background -->
  <div class="absolute inset-0 opacity-20">
    <div class="network-nodes">
      <!-- Network visualization elements -->
      <div class="node node-1"></div>
      <div class="node node-2"></div>
      <div class="node node-3"></div>
      <div class="node node-4"></div>
      <div class="node node-5"></div>
      
      <!-- Connecting lines -->
      <div class="connection conn-1"></div>
      <div class="connection conn-2"></div>
      <div class="connection conn-3"></div>
    </div>
  </div>
  
  <div class="container mx-auto px-4 sm:px-6 py-12 sm:py-16 md:py-20 relative z-10">
    <div class="text-center max-w-6xl mx-auto">
      <!-- Main headline -->
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-8xl font-bold mb-6 md:mb-8 leading-tight">
        <span class="text-white">Your</span> 
        <span class="text-cyber-green text-glow">AI.</span><br>
        <span class="text-white">Your</span> 
        <span class="text-electric-blue text-glow">Rules.</span><br>
        <span class="text-white">Your</span> 
        <span class="text-neon-purple text-glow">Sovereignty.</span>
      </h1>
      
      <!-- Subtitle -->
      <p class="text-lg sm:text-xl md:text-2xl text-gray-300 mb-8 md:mb-12 max-w-4xl mx-auto leading-relaxed px-4 sm:px-0">
        Break free from Big Tech surveillance and reclaim control of your digital life
      </p>
      
      <!-- Description -->
      <div class="max-w-5xl mx-auto mb-12 md:mb-16 px-4 sm:px-0">
        <p class="text-base sm:text-lg text-gray-400 leading-relaxed">
          Sovereign Agents aren't just another AI assistant. They're proactive, semi-autonomous companions 
          that orchestrate your digital world while preserving what matters most: 
          <span class="text-cyber-green">your privacy</span> and 
          <span class="text-neon-purple">independence</span>.
        </p>
      </div>
      
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-gray-600 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-cyber-green rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>

<style>
  
  .network-nodes {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  .node {
    position: absolute;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    animation: network-pulse 3s ease-in-out infinite;
  }
  
  @media (min-width: 640px) {
    .node {
      width: 12px;
      height: 12px;
    }
  }
  
  .node-1 {
    top: 20%;
    left: 15%;
    background: #00ff41;
    animation-delay: 0s;
  }
  
  .node-2 {
    top: 30%;
    right: 20%;
    background: #0099ff;
    animation-delay: 0.5s;
  }
  
  .node-3 {
    bottom: 25%;
    left: 25%;
    background: #9945ff;
    animation-delay: 1s;
  }
  
  .node-4 {
    top: 50%;
    left: 50%;
    background: #00ff41;
    animation-delay: 1.5s;
  }
  
  .node-5 {
    bottom: 30%;
    right: 30%;
    background: #0099ff;
    animation-delay: 2s;
  }
  
  .connection {
    position: absolute;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, #00ff41 50%, transparent 100%);
    animation: network-pulse 4s ease-in-out infinite;
  }
  
  .conn-1 {
    top: 22%;
    left: 16%;
    width: 65%;
    transform: rotate(15deg);
    animation-delay: 0.2s;
  }
  
  .conn-2 {
    top: 45%;
    left: 30%;
    width: 40%;
    transform: rotate(-30deg);
    background: linear-gradient(90deg, transparent 0%, #0099ff 50%, transparent 100%);
    animation-delay: 1.2s;
  }
  
  .conn-3 {
    bottom: 35%;
    left: 25%;
    width: 50%;
    transform: rotate(45deg);
    background: linear-gradient(90deg, transparent 0%, #9945ff 50%, transparent 100%);
    animation-delay: 2.2s;
  }
  
  @keyframes network-pulse {
    0%, 100% { 
      opacity: 0.3; 
      transform: scale(1);
    }
    50% { 
      opacity: 1; 
      transform: scale(1.1);
    }
  }
</style>